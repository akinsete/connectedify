<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logRelativeLayoutHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/con_bg" />

    <RelativeLayout
        android:id="@+id/loginRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp">

            <LinearLayout
                android:id="@+id/loginformRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_holder"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_marginBottom="38dp"
                    android:cropToPadding="false"
                    android:padding="6dp"
                    android:src="@drawable/avatar_holder"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="2dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input"
                    android:ellipsize="start"
                    android:ems="10"
                    android:hint="Name"
                    android:textColorHint="@color/white"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/text_field_padding"
                    android:paddingTop="16dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_field" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/input"
                    android:ellipsize="start"
                    android:ems="10"
                    android:textColorHint="@color/white"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/text_field_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_field" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/input"
                    android:ellipsize="start"
                    android:ems="10"
                    android:textColorHint="@color/white"
                    android:hint="Phone Number"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/text_field_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_field" />

                <TextView
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/regPassword"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_fill_full"
                    android:padding="12dp"
                    android:text="Sign Up"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/explore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutgoogle"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:id="@+id/notSure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Already ready have an account?"
                        android:textSize="12sp" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/notSure"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/notSure"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Log In."
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>